<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_hdr"
        android:weightSum="10"

        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:text="Hello World sddgshg sgdhajgdh sdghjdgh dhgshjdga"
            android:textSize="13sp"
            android:minLines="2"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:id="@+id/text_header"/>

        <LinearLayout
            android:id="@+id/ll_earnedPtAndImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/incentiveiconStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"


                />

            <TextView
                android:id="@+id/txt_earnedpoints"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.40"
                android:gravity="top|center"
                android:paddingTop="5dp"
                android:text="earned points\nRs:100"
                android:textColor="#000000"
                android:textSize="13sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_Openlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:background="@color/graycolor"
                android:paddingTop="12dp"
                android:src="@drawable/expand_arrow" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/ll_hdr"
        android:id="@+id/ll_incentiveTblData"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/incentive_tbl_bckgrnd"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_hdr"
            android:id="@+id/ll_incentiveTblShow"
            android:orientation="vertical"
            >

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
