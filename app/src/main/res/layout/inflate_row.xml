<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"

        android:background="@drawable/border_to_inflate_row">

        <TextView
            android:id="@+id/textView_Shortname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_left_right_bottom"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:paddingRight="6dp"
            android:paddingBottom="4dp"

            android:text="CH"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/edittxt_freeStck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:background="@android:drawable/editbox_background_normal"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="5"
            android:padding="4dp"
            android:textSize="10sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.85"
            android:orientation="horizontal"
            android:visibility="gone">


            <EditText
                android:id="@+id/edittxt_mnth1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:padding="4dp"
                android:textSize="10sp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/edittxt_mnth2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:padding="4dp"
                android:textSize="10sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edittxt_mnth3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:padding="4dp"
                android:textSize="10sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edittxt_mnth4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:padding="4dp"
                android:textSize="10sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edittxt_mnth5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:padding="4dp"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_forBtn_OldStck"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/custom_bg_for_dtbtr_stock_row"
                android:drawableRight="@drawable/dropdown"

                android:gravity="center"
                android:inputType="number"
                android:paddingRight="1dp"
                android:text="0"
                android:textColor="#0000ae"

                android:textSize="9sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <EditText
            android:id="@+id/edittxt_sampleStck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:background="@android:drawable/editbox_background_normal"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="5"
            android:padding="2dp"
            android:textSize="10sp" />

    </TableRow>
</TableLayout>
