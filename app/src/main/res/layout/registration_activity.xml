<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="project.astix.com.ltfoodsosfaindirect.RegistrationActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="#a25611"

        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/Toolbar.TitleText" >
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
android:visibility="gone"
            android:paddingRight="10dp"
            android:src="@drawable/ic_back"


            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="DSM Profile"/>

        <ImageView
            android:id="@+id/logoutIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
android:visibility="gone"
            android:paddingRight="10dp"
            android:src="@drawable/logout30"


            android:textSize="15sp" />

        <!-- app:titleTextAppearance using for custom title size -->

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:gravity="center"
        android:background="@drawable/shadow_simple"
        android:id="@+id/parentOf_questionLayout"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/applogo"

            app:civ_border_width="2dp"
            app:civ_border_color="#a35106"/>




        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:padding="5dp"
            android:background="@drawable/header_background"
            android:id="@+id/welcomeTextView"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:text="@string/txtWelcome"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
android:id="@+id/textCoverage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"

                android:text="Coverage Area"
                android:textColor="#cf6f16"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/CovrageArea"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"



                android:text=""
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textContact"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"



                android:text="Contact No"
                android:textColor="#cf6f16"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/ContactOnWelcome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"


                android:text=""
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
android:id="@+id/textDob"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:textColor="#cf6f16"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/DobOnWelcome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"



                android:text=""
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:padding="5dp"
            android:text=""
            android:textColor="#cf6f16"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/TotalStoreAddedParent"

            android:layout_height="wrap_content">


            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/radio_yes"
                android:text="@string/radioYes"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/radio_no"

                android:layout_marginLeft="10dp"
                android:text="@string/radioNo"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/text_UpdateNow"
                android:textColor="#000"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="14sp"
                android:text="@string/txtUpdate"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:id="@+id/text_NotYou"
                android:gravity="center"
                android:text="@string/txtNotYou"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/text_Daystart"
                android:padding="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/custom_button_login"
                android:text="@string/txtDayStart"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:id="@+id/parentOf_validationLayout"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <EditText
            android:id="@+id/ET_mobile_credential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mobile24"
            android:maxLines="1"
            android:textSize="16sp"
            android:hint="@string/hintMobileNo"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="8dp"
            android:textColor="#000"
            android:drawablePadding="10dp"
            android:background="@drawable/custom_edittext"
            android:paddingBottom="8dp"
            android:maxLength="10" />


        <TextView
            android:id="@+id/txt_Dob_credential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dob"
            android:maxLines="1"
            android:hint="@string/txtDOB"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="8dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="10dp"
            android:paddingBottom="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_button_login"
            android:layout_height="30dp"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="#fff"
            android:id="@+id/validate_btn"
            android:textStyle="bold"
            android:text="@string/txtValidate"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="10"


        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollViewParentOfMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/parentOfAllDynamicData"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_with_5dp"
                android:orientation="vertical"
                android:visibility="visible">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_imageForSOSFA"
                    android:layout_width="110dp"
                    android:layout_gravity="center"
                    android:layout_height="110dp"
                    android:src="@drawable/applogo"
                     android:visibility="gone"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#a35106"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_with_5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:text="Name"
                            android:textColor="#cf6f16"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/ed_Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittex_with_white_background"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 -."
                            android:gravity="center"
                            android:inputType="textCapWords"
                            android:padding="2dp"
                            android:textColor="#000"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:text="Contact No."
                            android:textColor="#cf6f16"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/ed_ContactNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittex_with_white_background"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="2dp"
                            android:textColor="#000"

                            android:textSize="13sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textSize="13sp"

                            android:text="Email ID"
                            android:textColor="#cf6f16"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_width="0dp"
                            android:background="@drawable/edittex_with_white_background"
                            android:padding="2dp"
                            android:textColor="#000"
                            android:id="@+id/ed_EmailID"
                            android:layout_margin="5dp"
                            android:gravity="center"

                            android:textSize="13sp"
                            android:layout_weight="1"


                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:text="DOB"
                            android:textColor="#cf6f16"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Text_Dob"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittex_with_white_background"
                            android:drawableRight="@drawable/calendar32"
                            android:gravity="center"
                            android:text="Select Date"
                            android:textColor="#000"

                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:background="#cf6f16"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Bank Account Details"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Bank Account No."

                            android:textColor="#cf6f16"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/ed_AccNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittex_with_white_background"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="2dp"
                            android:textColor="#000"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Bank Name"

                            android:textColor="#cf6f16"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/spinner_Bank"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittex_with_white_background"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 -."
                            android:gravity="center"
                            android:inputType="textCapWords"
                            android:padding="2dp"
                            android:textColor="#000"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:text="IFSC Code"

                                        android:textColor="#cf6f16"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/ed_ifsc"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edittex_with_white_background"
                                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                                        android:gravity="center"
                                        android:maxLength="11"
                                        android:padding="2dp"
                                        android:textColor="#000"
                                        android:textSize="13sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/edittext_bg"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:layout_weight="1"
                                            android:text="UPI ID Available"

                                            android:textColor="#cf6f16"
                                            android:textSize="13sp"
                                            android:textStyle="bold" />

                                        <RadioButton
                                            android:id="@+id/rb_yes"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:layout_weight=".5"
                                            android:gravity="center"
                                            android:text="Yes"
                                            android:textColor="#cf6f16"
                                            android:textSize="13sp" />

                                        <RadioButton
                                            android:id="@+id/rb_NO"
                                            android:layout_width="0dp"

                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:layout_weight=".5"
                                            android:gravity="center"
                                            android:text="No"
                                            android:textColor="#cf6f16"
                                            android:textSize="13sp" />

                                    </LinearLayout>

                                    <EditText
                                        android:id="@+id/ed_UPIID"
                                        android:layout_width="130dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:background="@drawable/edittex_with_white_background"
                                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 -.@"
                                        android:gravity="center"
                                        android:padding="2dp"
                                        android:textColor="#000"
                                        android:textSize="13sp"
                                        android:visibility="gone" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight=".6"

                                        android:text="Distributor Name"
                                        android:textColor="#cf6f16"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/distributorName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"

                                        android:text=""
                                        android:textColor="#000"
                                        android:textSize="12sp"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight=".6"

                                        android:text="Last Working Date"
                                        android:textColor="#cf6f16"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:id="@+id/lastWorkingDate"

                                        android:text=""
                                        android:textColor="#000"
                                        android:textSize="13sp"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llCamera"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@android:color/white"
                                    android:orientation="vertical"
                                    android:visibility="gone"></LinearLayout>

                                <LinearLayout
                                    android:id="@+id/recycler_view_images"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingLeft="10dp"

                                    android:paddingRight="10dp">

                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/map_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="12dp"
                                        android:layout_marginBottom="-100dp"

                                        android:layout_marginTop="-100dp"

                                        android:background="@drawable/edittext_bg"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:background="#cf6f16"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text="SIGN HERE"
                                            android:textColor="#fff"
                                            android:textSize="15sp"
                                            android:textStyle="bold"
                                            android:visibility="gone" />

                                        <LinearLayout
                                            android:id="@+id/linearLayout2"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"

                                            android:background="@android:color/white">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="30dp"
                                                android:layout_weight="1"
                                                android:background="#cf6f16"
                                                android:gravity="center"
                                                android:padding="5dp"
                                                android:text="SIGN HERE"
                                                android:textColor="#fff"
                                                android:textSize="15sp"
                                                android:textStyle="bold" />

                                            <Button
                                                android:id="@+id/cancel"
                                                android:layout_width="0dp"
                                                android:layout_height="30dp"
                                                android:layout_weight="1"
                                                android:background="#cf6f16"
                                                android:text="Cancel"
                                                android:textColor="@android:color/white"
                                                android:textSize="15sp"
                                                android:visibility="gone" />

                                            <Button
                                                android:id="@+id/clear"
                                                android:layout_width="0dp"
                                                android:layout_height="30dp"
                                                android:layout_weight="1"
                                                android:background="#cf6f16"
                                                android:text="clear Sign"
                                                android:textColor="@android:color/white"
                                                android:textSize="15sp" />

                                            <Button
                                                android:id="@+id/getsign"
                                                android:layout_width="0dp"
                                                android:layout_height="30dp"
                                                android:layout_weight="1"
                                                android:background="#cf6f16"
                                                android:text="save"
                                                android:textColor="@android:color/white"
                                                android:textSize="15sp"
                                                android:visibility="gone" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/linearLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#fff"
                                            android:orientation="vertical" />

                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/transparent_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:src="@android:color/transparent" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">


                                <Button
                                    android:id="@+id/Submit"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/custom_button"
                                    android:text="Submit"
                                    android:textColor="#FFF"
                                    android:textStyle="bold"

                                    android:visibility="gone"

                                    />

                                <Button
                                    android:id="@+id/BtnNotYou"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/custom_button"
                                    android:text="Not You"
                                    android:textColor="#FFF"
                                    android:textStyle="bold"

                                    android:visibility="gone"

                                    />

                                <Button
                                    android:id="@+id/CancelButton"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/custom_button"
                                    android:text="Cancel"
                                    android:textColor="#FFF"
                                    android:textStyle="bold"

                                    android:visibility="gone" />


                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/transparentOverlay"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@android:color/transparent"
                            android:visibility="gone">


                            <!-- List View -->
                            <ListView
                                android:id="@+id/list_view"
                                android:layout_width="fill_parent"

                                android:layout_height="wrap_content"
                                android:background="#fff" />

                        </RelativeLayout>
                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <Button
        android:text="Back"
        android:id="@+id/BackBtn"
        android:layout_width="wrap_content"
      android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="#FFF"
        android:visibility="visible"

        android:textStyle="bold"
        />
</LinearLayout>
